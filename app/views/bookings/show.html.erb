<div class="grid-container">
    <div class="grid-x grid-padding-x">
        <div class="cell">
            <h2>Your Flight Information</h2>
            <hr>
        </div>
        <div class="small-6 cell">
            <%= label :flight, "Flight Number:" %>
            <p><%= @flight.id %></p>
        </div>
        <div class="small-6 cell">   
            <%= label :flight_date, "Flight Date:" %>
            <p><%= @flight.date_formated %></p>
        </div>
        <div class="small-6 cell">
            <p>From: <%= @flight.from_airport.name %>
            (<%= @flight.from_airport.code %>)</p>
        </div>
        <div class="small-6 cell">
            <p>To: <%= @flight.to_airport.name %><br>
            (<%= @flight.to_airport.code %>)</p>
        </div>
    </div>
</div>
<div class="grid-container">
    <div class="grid-y grid-padding-x">
        <div class="cell">
            <h3>Passengers</h3>
        </div>
        <div class="cell"> 
            <ol>
            <% @booking.passengers.each do |passenger| %>
                    <li>
                    Name: <%= passenger.name %><br>
                    Email: <%= passenger.email %>
                    <hr>
                    </li>
                
            <% end %>
            </ol>
        </div>
    </div>
</div>