<%= form_for @flight, method: :get do |f| %>
    <%= f.label :from %>
    <%= f.collection_select(:from_airport_id, Airport.all, :id, :code) %>
    
    <%= f.label :to %>
    <%= f.collection_select(:to_airport_id, Airport.all, :id, :code) %>
    
    <%= select_tag :number_of_passengers, options_for_select((1..10)) %>
    
    <%= f.label :date %>
    <%= f.collection_select(:start_time, @flights, :id, :start_time) %>
<% end %>